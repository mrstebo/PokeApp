<Application
    x:Class="PokeApp.UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PokeApp.UWP"
    RequestedTheme="Light">
    <Application.Resources>
        <DataTemplate x:Key="CustomListViewItemTemplate">
            <Grid Background="#DAFF7F">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="0.20*" />
                </Grid.ColumnDefinitions>
                <Image Grid.RowSpan="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Source="{Binding ImageUrl}" Width="64" Height="64" />
                <StackPanel Grid.Column="1" Padding="10">
                    <TextBlock Foreground="#7F3300" FontStyle="Italic" FontSize="22" VerticalAlignment="Center" Text="{Binding Name}" />
                    <TextBlock Foreground="#267F00" FontWeight="Bold" FontSize="12" VerticalAlignment="Center" Text="{Binding Id}" />
                </StackPanel>
                
                <Line Grid.Row="1" Grid.ColumnSpan="2" X1="0" X2="1" Margin="30,20,0,0" StrokeThickness="1" Stroke="SlateGray" Stretch="Fill" VerticalAlignment="Bottom" />
            </Grid>
        </DataTemplate>
    </Application.Resources>
</Application>
