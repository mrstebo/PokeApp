<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_focused="true" >
    <shape android:shape="rectangle">
      <gradient
          android:startColor="#ffffff"
          android:endColor="#ffffff"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#4d8dfd" />
      <corners
          android:radius="6dp" />
    </shape>
  </item>
  <item>
    <shape android:shape="rectangle">
      <gradient
          android:startColor="#dedede"
          android:endColor="#fea53e"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#fea53e" />
      <corners
          android:radius="6dp" />
    </shape>
  </item>
</selector>